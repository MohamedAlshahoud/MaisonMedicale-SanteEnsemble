{% extends 'base.html.twig' %}

{% block title %}Choisir une disponibilité{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header form-title">
                    <h3>Choisissez un créneau disponible</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.disponibilite, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.disponibilite, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="text-center">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-custom'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
