{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header form-title text-center">
                    <h3>Changer mon mot de passe</h3>
                </div>
                <div class="card-body">
                    {{ form_start(passwordForm) }}
                        <div class="mb-3">
                            {{ form_label(passwordForm.currentPassword) }}
                            {{ form_widget(passwordForm.currentPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(passwordForm.currentPassword) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(passwordForm.newPassword) }}
                            {{ form_widget(passwordForm.newPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(passwordForm.newPassword) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(passwordForm.confirmPassword) }}
                            {{ form_widget(passwordForm.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(passwordForm.confirmPassword) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-custom">Enregistrer</button>
                        </div>
                    {{ form_end(passwordForm) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('patient_profile', { id: patient.id }) }}" class="btn btn-outline-secondary btn-sm">‚Üê Retour au profil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
