{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Changer mon mot de passe</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.currentPassword) }}
            {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.currentPassword) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.newPassword) }}
            {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.newPassword) }}
        </div>

