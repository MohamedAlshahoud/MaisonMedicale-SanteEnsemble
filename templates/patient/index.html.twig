{% extends 'base.html.twig' %}

{% block title %}Maison Médicale | Mon Profil{% endblock %}

{% block body %}
<div class="main_content">
    <div class="section">
        <div class="container">
            <div class="row">
                <!-- Menu latéral -->
                <div class="col-lg-3 col-md-4">
                    <div class="dashboard_menu">
                        <ul class="nav nav-tabs flex-column">
                            <li class="nav-item">
                                <a class="nav-link " href="{{ path('patient_profile', {id: patient.id}) }}">
                                    <i class="fas fa-user"></i> Mon compte
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ path('patient_rendezvous', { id: patient.id }) }}">
                                    <i class="ti-calendar"></i> Mes Rendez-vous
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Contenu principal -->
                <div class="col-lg-9 col-md-8">
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade active show" id="account-detail">
                            <div class="card">
                                <div class="heading_s1">
                                    <h1>Profil de {{ patient.prenom }} {{ patient.nom }}</h1>
                                </div>
                                <div class="card-body">
                                    <form method="post">
                                        <div class="row">
                                            <div class="form-group col-md-6 mb-3">
                                                <label>Nom :</label>
                                            </div>
                                            <div class="form-group col-md-6 mb-3">
                                                {{ patient.nom }}
                                            </div>

                                            <div class="form-group col-md-6 mb-3">
                                                <label>Prénom :</label>
                                            </div>
                                            <div class="form-group col-md-6 mb-3">
                                                {{ patient.prenom }}
                                            </div>

                                            <div class="form-group col-md-6 mb-3">
                                                <label>Email :</label>
                                            </div>
                                            <div class="form-group col-md-6 mb-3">
                                                {{ patient.email }}
                                            </div>

                                            <div class="form-group col-md-6 mb-3">
                                                <label>Date de naissance :</label>
                                            </div>
                                            <div class="form-group col-md-6 mb-3">
                                                {{ patient.dateNaissance|date('d/m/Y') }}
                                            </div>

                                            <div class="form-group col-md-6 mb-3">
                                                <label>Adresse :</label>
                                            </div>
                                            <div class="form-group col-md-6 mb-3">
                                                {{ patient.adresse }}
                                            </div>

                                            <div class="form-group col-md-6 mb-3">
                                                <label>Téléphone :</label>
                                            </div>
                                            <div class="form-group col-md-6 mb-3">
                                                {{ patient.telephone }}
                                            </div>
                                            
                                            <div class="btns-group">
                                                <a href="{{ path('patient_edit', { id: patient.id }) }}" class="btn btn-fill-out">Modifier mon profil</a>
                                                <a href="#" class="btn btn-fill-out">Changer mon mot de passe</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div> 
                    </div> 
                </div> 
            </div>
        </div>
    </div>
</div>
{% endblock %}
