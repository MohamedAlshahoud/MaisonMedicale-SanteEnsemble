{% extends 'base.html.twig' %}

{% block title %}Maison Médicale | Mes Rendez-vous{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">📅 Mes Rendez-vous</h1>

    {% if rendezvous is not empty %}
        <ul class="list-group">
            {% for rdv in rendezvous %}
                <li class="list-group-item">
                    <strong>Date :</strong> {{ rdv.dateHeure|date('d/m/Y H:i') }}<br>
                    <strong>Médecin :</strong> Dr {{ rdv.medecin.prenom }} {{ rdv.medecin.nom }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Vous n'avez aucun rendez-vous pour le moment.</p>
    {% endif %}

    <a href="{{ path('patient_profile', { id: patient.id }) }}" class="btn btn-secondary mt-4">← Retour au profil</a>
</div>
{% endblock %}
