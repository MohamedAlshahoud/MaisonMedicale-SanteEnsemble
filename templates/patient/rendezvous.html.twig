{% extends 'base.html.twig' %}

{% block title %}Maison M√©dicale | Mes Rendez-vous{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">üìÖ Mes Rendez-vous</h1>

    {% if rendezvous is not empty %}
        <ul class="list-group">
            {% for rdv in rendezvous %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Date :</strong> {{ rdv.dateHeure|date('d/m/Y H:i') }}<br>
                        <strong>M√©decin :</strong> Dr {{ rdv.medecin.prenom }} {{ rdv.medecin.nom }}
                    </div>
                    <a href="{{ path('rendez_vous_annuler', { id: rdv.id }) }}" 
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Voulez-vous vraiment annuler ce rendez-vous ?');">
                        Annuler
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Vous n'avez aucun rendez-vous pour le moment.</p>
    {% endif %}

    <a href="{{ path('patient_profile', { id: patient.id }) }}" class="btn btn-secondary mt-4">‚Üê Retour au profil</a>
</div>
{% endblock %}
